score_true_try: int = 0
score_false_try: int = 0
#1
captcha_text = 'Какая версия языка сейчас актуальна?'
expected_result = 'Python3'
while True:
    user_answer = input('Какая версия языка сейчас актуальна?: '.format(captcha_text))
    if user_answer.title() == expected_result:
        print('Ответ {Python3} верен')
        score_true_try += 1
        break
    else:
        print('Неверный ответ.')
        score_false_try += 1
#2
captcha_text = 'Какая кодировка используется в строках?'
expected_result = 'UTF8'
while True:
   user_answer = input('{0}: '.format(captcha_text))
   if user_answer.upper() == expected_result:
       print('Ответ {UTF8} верен')
       score_true_try += 1
       break
   else:
       print('Неверный ответ.')
       score_false_try += 1
#3
captcha_text = 'Сколько значений есть у bool?'
expected_result = 2
while True:
   user_answer = input('{0}: '.format(captcha_text))
   if int(user_answer) == expected_result:
       print('Ответ {2} верен')
       score_true_try += 1
       break
   else:
       print('Неверный ответ.')
       score_false_try += 1
